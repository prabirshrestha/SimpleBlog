@{
    var blog = ViewBag.blog.Value;
}
<ul>
    @if (!string.IsNullOrWhiteSpace(blog.twitter)) {
        <li><a href="https://twitter.com/@blog.twitter">@@@blog.twitter</a></li>
    }
    @if (!string.IsNullOrWhiteSpace(blog.github)) {
        <li><a href="https://github.com/@blog.github">github</a></li>
    }
    @if (!string.IsNullOrWhiteSpace(blog.email)) {
        <li><a href="mailto:@blog.email?subject=blog: whats up!">say hi</a></li>
    }
    <li><a href="@Url.Content("~/rss")">rss feed</a></li>
</ul>